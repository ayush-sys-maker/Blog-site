</head>
<body>

   <div class="navbar   " style="background-color: #0a0a0ae0;">
    <div class="container">
      <a class="navbar-brand fs-3  fs-lg-4  text-light " href="/">MINDSPARK</a>
      <ul class="nav">
        <li class="nav-item">
          <button class="  nav-btn btn btn-primary" onclick="window.location.href='/blogs'" >BLOGS</button>
        </li>
      
      </ul>
    </div>
  </div>



 <div class="container  mt-3">  
   

<% if (locals.post) { %>

 
      <form  id="editForm" class="yahoo" method="post" action="/api/post/<%=post.id%>">
        <input class="TITLE  text-center fs-3 fs-lg-3 fs-sm-5 fw-bold  "   placeholder="Title Here......"  type="text" name="title" value="<%=post.title %>">
        <textarea  class="textarea p-3 fs-4 shadow "    name="textcontent" rows="10"><%=post.textcontent %></textarea>
       
        <button class="  full-width btn btn-outline-dark  submit  fs-5  fs-lg-5  fs-sm-6  " type="submit">
          <%=submit%>
        </button>
      </form>


      <% } else {%>
        <form id="post" class="yahoo" method="post" action="/api/posts">
          <input  class="TITLE  text-center fs-3 fs-lg-3 fs-sm-5 fw-bold  "  type="text" name="title" placeholder="Title" required>
          <textarea   class="textarea  p-3 fs-4 shadow   "    name="textcontent" placeholder="Start writting  Here...." required rows="10"></textarea>
         
          <button class="  full-width btn btn-outline-dark  submit  fs-6  fs-lg-5  fs-sm-6  " type="submit">
            <%=submit%>
          </button>
        </form>




        <% } %>
 
   
  </div>















  

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
